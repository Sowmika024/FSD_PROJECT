    <!-- Donate Money -->

    <div class="cards" style="height:550px; position: relative; top: 80px;">
        <h3 style="text-align:center"><b>CONFIRM YOUR PAYMENT</b></h3>

        <form action="/donate" method="post" style="margin-left: 20px;">
            <label>Card Owner Name : </label><br />
            <input type="text" name="name" id="name" placeholder=" Enter Card Owner Name" required size="100">
            <br><br>
            <label>CVV : </label>
            <input type="text" name="cvv" id="cvv" placeholder="Enter CVV" required size="30" pattern="[0-9]{3}">
            <p>(format: 3 numbers)</p>
            <label>Card Number : </label><br />
            <input type="text" name="card" id="card" placeholder="Enter card number" required size="100"
                pattern="[0-9]{4} [0-9]{4} [0-9]{4} [0-9]{4}">
            <p>(format: 16 numbers with space)</p>
            <label>Expiry Date : </label>
            <input type="date" name="date" id="date" required> <br /><br />
            <label>Amount : </label>
            <input type="text" name="amt" id="amt" placeholder=" Enter Amount you want to pay" required size="30">
            <br><br>
            <span class="dc_payment_icons_glossy_75 dc_visa_glossy" title="Visa"></span>
            <span class="dc_payment_icons_glossy_75 dc_mastercard_glossy" title="Mastercard"></span><br />
            <input type="submit" value="complete payment" name="submit" id="submit" style="margin-left:300px"
                size="100">

        </form>

    </div>


