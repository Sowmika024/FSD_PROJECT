<div class="register">
  <h2 style="padding-left: 100px;"> Register Here</h2>
  <form  id="register" method="post" action="/sign_up">
    <label> Userid : </label><br />
    <input type="text" name="name" id ="name" placeholder="enter your user id" required> <br ><br >
    <label> Age : </label><br />
    <input type="text" name="age" id ="age" placeholder="enter your age" required> <br ><br >
    <label>Email : </label><br />
    <input type="email" name="email" id ="email" placeholder="enter your email" required> <br ><br > 
    <label>PHone no. : </label><br />
    <input type="tel" name="phn" id ="phn" placeholder="enter your phone number" required pattern="[0-9]{10}"> <br />
    <small>Format: (10 numbers )</small> <br ><br >
    <label>create password : </label><br />
    <input type="password" name="pass" id ="pass" placeholder="enter your password" pattern="^(?=.*?[A-Z])(?=(.*[a-z]){1,})(?=(.*[\d]){1,})(?=(.*[\W]){1,})(?!.*\s).{8,}$" required> <br ><br >
    <p>FORMAT : password must contain at least one special character,one uppercase letter,one lower letter,
      one number(0-9),min 8 characters
     </p>
     <input type="checkbox" onclick="myFunction()">Show Password<br /><br /><br /><br />
    <input type="submit" value="submit" name="submit" id="submit" style="background-color: rgb(226, 217, 235); color: black" onclick="matchPassword()" >

  </form>

  <script>
 function myFunction() {
    var x = document.getElementById("pass");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }

  </script>
